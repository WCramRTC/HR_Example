<Window x:Class="HR_Example.Timeclock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Example"
        mc:Ignorable="d"
        Title="Timeclock" Height="450" Width="421">
    <Canvas Background="#FF0E4609">
        <RichTextBox Height="132" Width="314" Canvas.Left="54" Canvas.Top="19" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbMainDisplay"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnClockIn" Content="Clock In" Canvas.Left="54" Canvas.Top="204" Height="48" Width="314" Click="btnClockIn_Click" />
        <Button x:Name="btnClockOut" Content="Clock Out" Canvas.Left="54" Canvas.Top="295" Height="48" Width="314" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnClockOut_Click"/>

    </Canvas>
</Window>
